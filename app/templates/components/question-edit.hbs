{{#if editQuestionShow}}
  <form>
    <div class="input-group input-group-sm">
      <span class="input-group-addon">Question:</span>
        {{input value=query id="query" class="form-control" placeholder=question.query}}
    </div>
    <br>
    <div class="input-group input-group-sm">
      <span class="input-group-addon">Asked By:</span>
        {{input value=author id="author" class="form-control" placeholder=question.author}}
    </div>
    <br>
    <div class="input-group input-group input-group-sm">
      <span class="input-group-addon">Notes:</span>
        {{input value=notes id="notes" class="form-control" placeholder=question.notes}}
    </div>
    <br>
    <button class="btn btn-default btn-block" {{action 'update' question}}>Submit Edits</button>
    <hr>
  </form>
{{else}}
  <button class="btn btn-default btn-sm" {{action 'editQuestionShow'}}>Edit</button>
{{/if}}
